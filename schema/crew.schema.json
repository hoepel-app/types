{
  "id": "https://docs.hoepel.app/schema/crew.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A crew member",
  "type": "object",
  "required": [ "firstName", "lastName", "address", "active", "remarks" ],
  "properties": {
    "firstName": {
      "type": "string"
    },
    "lastName": {
      "type": "string"
    },
    "address": {
      "$ref": "https://docs.hoepel.app/schema/address.schema.json"
    },
    "active": {
      "type": "boolean"
    },
    "bankAccount": {
      "type": "string",
      "description": "Bank account of the person, preferably IBAN format"
    },
    "contact": {
      "$ref": "https://docs.hoepel.app/schema/contact-info.schema.json"
    },
    "yearStarted": {
      "type": "integer"
    },
    "birthDate": {
      "type": "string",
      "format": "date",
      "description": "Day on which child was born as ISO 8601"
    },
    "remarks": {
      "type": "string"
    }
  }
}
