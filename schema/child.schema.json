{
  "id": "https://docs.hoepel.app/schema/child.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A child",
  "type": "object",
  "required": [ "firstName", "lastName", "contactPeople", "remarks" ],
  "properties": {
    "firstName": {
      "type": "string"
    },
    "lastName": {
      "type": "string"
    },
    "legacyAddress": {
      "$ref": "https://docs.hoepel.app/schema/address.schema.json"
    },
    "legacyContact": {
      "$ref": "https://docs.hoepel.app/schema/contact-info.schema.json"
    },
    "gender": {
      "type": "string",
      "enum": [
        "male",
        "female",
        "other"
      ]
    },
    "contactPeople": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "contactPersonId": {
            "type": "string"
          },
          "relationship": {
            "type": "string",
            "description": "The relationship between the person and the contact person. E.g. 'Father', 'Grandparent'"
          }
        }
      }
    },
    "birthDate": {
      "type": "string",
      "format": "date",
      "description": "Day on which child was born as ISO 8601"
    },
    "remarks": {
      "type": "string"
    }
  }
}
